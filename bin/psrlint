#!/usr/bin/env php

<?php

require_once __DIR__."/../vendor/autoload.php";

use function PsrLinter\parseFile;
use function PsrLinter\showResult;
use function PsrLinter\returnExitCode;

$options = getopt("",["path:"]);

$code = parseFile($options["path"]);
$result = $lint($code);

print(showResult($result));
returnExitCode($result);
