#!/usr/bin/env php

<?php

require_once __DIR__."/../vendor/autoload.php";

use function PsrLinter\parseFile;
use function PsrLinter\returnResult;
use function PsrLinter\makeLinter;

$options = getopt("",["path:"]);

$code = parseFile($options["path"]);

$lint = makeLinter(isset($rules));
$errors = $lint($code);

print(returnResult($errors));

if (!$errors) {
    exit(2);
}
