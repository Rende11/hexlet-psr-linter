#!/usr/bin/env php

<?php

require_once __DIR__."/../vendor/autoload.php";

use function PsrLinter\parseFile;
use function PsrLinter\returnResult;
use function PsrLinter\lint;

$options = getopt("",["path:"]);

$code = parseFile($options["path"]);
$errors = lint($code);
print(getResult($errors));

if (!$errors) {
    exit(2);
}
